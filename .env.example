# Configuración de la aplicación
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENVIRONMENT=development
DEBUG=true

# Base de datos
DATABASE_URL=postgresql://storatrack_user:storatrack_pass@localhost:5432/storatrack
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=storatrack
DATABASE_USER=storatrack_user
DATABASE_PASSWORD=storatrack_pass

# Redis (opcional, para cache y sesiones)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Configuración del servidor web
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_WORKERS=1

# Nginx (para producción)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Configuración de correo (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false
EMAIL_FROM=noreply@storatrack.com

# Configuración de archivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB en bytes
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,gif,doc,docx,xls,xlsx

# Configuración de logs
LOG_LEVEL=INFO
LOG_FILE=./logs/storatrack.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Configuración de seguridad
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Configuración de reportes
REPORT_TEMP_DIR=./temp/reports
REPORT_CACHE_TTL=3600  # 1 hora en segundos

# Configuración de etiquetas
QR_CODE_SIZE=200
BARCODE_WIDTH=300
BARCODE_HEIGHT=100
LABEL_DPI=300

# Configuración de costos
DEFAULT_BASE_COST=0.0
DEFAULT_DAILY_COST=1000.0  # En pesos chilenos
IVA_RATE=0.19  # 19% IVA en Chile
CURRENCY=CLP

# Configuración de backup
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Diario a las 2 AM

# Configuración de monitoreo
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
SENTRY_DSN=  # URL de Sentry para monitoreo de errores

# Configuración de desarrollo
RELOAD=true
DEBUG_SQL=false
PROFILING_ENABLED=false

# Configuración de producción
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
SSL_REDIRECT=false

# Configuración de rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # segundos

# Configuración de cache
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutos
CACHE_MAX_SIZE=1000

# Configuración de timezone
TIMEZONE=America/Santiago

# Configuración de idioma
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en